{
  "extends": "./tsconfig.json",
  "exclude": ["eslint.config.mts", "__tests__/**", "**/*.spec.ts", "**/*.test.ts"],
  "compilerOptions": {
    // Override development settings for production build
    "allowImportingTsExtensions": false,
    "noEmit": false,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    // Ensure stable module resolution for published package
    "module": "node20",
    "target": "es2023"
  }
}
